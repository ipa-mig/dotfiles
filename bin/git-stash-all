#!/bin/bash

###
### Script for checking all packages for stashes 
###

### echo usage
function echo_usage() {
  echo "Usage: git-stash-all [options]"
  echo ""
  echo "Shows the stash of all repositories in the current folder."
  echo "Calls \"git stash\" internally on all directories in the current folder."
  echo ""
  echo "optional arguments:"
  echo "-h, --help           Show this help message and exit"
  echo "-l, --list           Calls \"git stash list\" (default)"
  echo "-s, --show           Calls \"git stash show\""
  echo "--outputfile=<FILE>   File to pipe output in. "
  echo ""
}

### Main
# read in arguments
optspec=":hls-:"

OUTPUT=""
COMMAND="list"

while getopts "$optspec" optchar; do
  case "${optchar}" in
    -)
      case "${OPTARG}" in
        help)
          echo_usage
          exit 2
          ;;
        list)
          COMMAND="list"
          ;;
        show)
          COMMAND="show"
          ;;
        outputfile=*)
          val=${OPTARG#*=}
          OUTPUT=$val
          ;;
        *)
          echo "Unknown option --${OPTARG}" >&2
          echo_usage
          exit 1
          ;;
      esac;;
    h)
      echo_usage
      exit 2
      ;;
    l)
      COMMAND="list"
      ;;
    s)
      COMMAND="show"
      ;;
    *)
      if [ "$OPTERR" != 1 ] || [ "${optspec:0:1}" = ":" ]; then
        echo "Non-option argument: '-${OPTARG}'" >&2
        echo_usage
        exit 1
      fi
      ;;
  esac
done


# get all installed stacks
ls -l $PWD | grep '^d' | awk '{print $9}' > /tmp/stacks_tmp.txt

tmp=/tmp/output

# check git stash for stacks
echo "--- Check git stash $COMMAND for all stacks! ---" | tee $tmp
echo "" | tee -a $tmp

while read line
do
    pushd $PWD/$line > /dev/null

	  echo "__ git stash for stack: $line __" | tee -a $tmp
 	  git stash $COMMAND | tee -a $tmp
  	echo "" | tee -a $tmp

    popd > /dev/null
done < /tmp/stacks_tmp.txt

# clean up tmp files
rm /tmp/stacks_tmp.txt

if [ "$OUTPUT" == "" ]
  then
    echo "Done."
  else
    touch $OUTPUT
    cat $tmp > $OUTPUT
fi

rm $tmp

exit
